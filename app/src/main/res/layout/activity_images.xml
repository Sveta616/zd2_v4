<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/lis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of cases"
            android:textColor="#E75480"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sm1"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners" />
            <TextView
                android:id="@+id/cook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cook for family"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/r"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sm2"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners" />
            <TextView
                android:id="@+id/read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read a book"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/sm3"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners" />
            <TextView
                android:id="@+id/dance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to the dance club"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write the text"
                android:textColor="#000000"
                android:textSize="12dp"
                android:padding="16dp" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:backgroundTint="#E75480"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>